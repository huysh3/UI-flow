.promotion-199--container {
  background-color: rgba(0, 0, 0, 0.6);
  padding-top: 1px;
  padding-bottom: 2rem;
}
.promotion-199--container .promotion--main-content {
  margin: 4vw;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.7);
  padding-bottom: 2rem;
}
.promotion-199--container .main-content--img {
  width: 92vw;
}
.promotion-199--container .contant--btn {
  border: 1px solid #876C35;
  color: #876C35;
  display: inline-block;
  font-size: .7rem;
  padding: .1rem 1.3rem;
  border-radius: 1rem;
  margin-top: 1.3rem;
}
.promotion-199--container .desc-cutline {
  color: #666;
  font-size: .7rem;
  position: relative;
  margin-top: 1.6rem;
}
.promotion-199--container .desc-cutline::before {
  width: 22vw;
  height: 1px;
  background-color: #666;
  position: absolute;
  content: ' ';
  top: 45%;
  left: 8vw;
}
.promotion-199--container .desc-cutline::after {
  width: 22vw;
  height: 1px;
  background-color: #666;
  position: absolute;
  content: ' ';
  top: 45%;
  right: 8vw;
}
.promotion-199--container .desc-part--item {
  margin-top: 1.4rem;
}
.promotion-199--container .desc-part--item .item--img {
  width: 2.1rem;
  border-radius: 50%;
}
.promotion-199--container .desc-part--item .item--title {
  font-size: .7rem;
  color: #fff;
}
.promotion-199--container .desc-part--item .item--subtitle {
  font-size: .7rem;
  color: #999;
}
.promotion-199--container .main-content--btn {
  background-image: linear-gradient(-137deg, #E6B980 0%, #EACDA3 100%);
  display: inline-block;
  border-radius: 10rem;
  padding: .4rem 2.7rem;
  font-size: .7rem;
  color: #333;
  font-weight: bold;
  margin-top: 1.6rem;
}
.promotion-199--container .main-content--btn .iconfont {
  font-size: .6rem;
  position: relative;
  left: .4rem;
}
